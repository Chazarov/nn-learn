{
  "info": {
    "name": "Multilayer Perceptron API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "file_id",
      "value": ""
    },
    {
      "key": "perceptrone_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Upload CSV",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/upload/csv",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "{{csv_file_path}}"
            }
          ]
        }
      }
    },
    {
      "name": "Learn",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/learn/",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "options": {
            "raw": { "language": "json" }
          },
          "raw": "{\n  \"file_id\": \"{{file_id}}\",\n  \"hidden_layers_architecture\": [{{hidden_layer_size}}],\n  \"activation_type\": \"{{activation_type}}\",\n  \"epochs\": {{epochs}},\n  \"learning_rate\": {{learning_rate}}\n}"
        }
      }
    },
    {
      "name": "Get Answer",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/get_answer",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "options": {
            "raw": { "language": "json" }
          },
          "raw": "{\n  \"perceptrone_id\": \"{{perceptrone_id}}\",\n  \"input_vector\": [{{input_vector}}],\n  \"activation_type\": \"{{activation_type}}\"\n}"
        }
      }
    },
    {
      "name": "Get All Files",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/files"
      }
    },
    {
      "name": "Get All Weights",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/weights"
      }
    }
  ]
}
