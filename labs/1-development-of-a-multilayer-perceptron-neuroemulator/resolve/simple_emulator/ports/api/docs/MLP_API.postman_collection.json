{
  "info": {
    "name": "Multilayer Perceptron API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000/api" },
    { "key": "token", "value": "" },
    { "key": "file_id", "value": "" },
    { "key": "project_id", "value": "" },
    { "key": "image_id", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/sign-up",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "options": { "raw": { "language": "json" } },
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"name\": \"username\",\n  \"password\": \"secret123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "options": { "raw": { "language": "json" } },
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"secret123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "CSV",
      "item": [
        {
          "name": "Upload CSV",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/csv/upload",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "" }
              ]
            }
          }
        },
        {
          "name": "Get All CSV Files",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/csv/",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Delete CSV",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/csv/{{file_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Actions",
      "item": [
        {
          "name": "Init Perceptrone",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/actions/init",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "options": { "raw": { "language": "json" } },
              "raw": "{\n  \"file_id\": \"{{file_id}}\",\n  \"hidden_layers_architecture\": [6]\n}"
            }
          }
        },
        {
          "name": "Learn",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/actions/learn/",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "options": { "raw": { "language": "json" } },
              "raw": "{\n  \"project_id\": \"{{project_id}}\",\n  \"activation_type\": \"SIGMOID\",\n  \"epochs\": 300,\n  \"learning_rate\": 0.05\n}"
            }
          }
        },
        {
          "name": "Get Answer",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/actions/get_answer",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "options": { "raw": { "language": "json" } },
              "raw": "{\n  \"perceptrone_id\": \"{{project_id}}\",\n  \"input_vector\": [5.1, 3.5, 1.4, 0.2],\n  \"activation_type\": \"SIGMOID\"\n}"
            }
          }
        },
        {
          "name": "Get All Projects",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/actions/projects",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Project",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/actions/project/{{project_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Delete Project",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/actions/projects/{{project_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    },
    {
      "name": "Images",
      "item": [
        {
          "name": "Get Image by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/images/{{image_id}}",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    }
  ]
}
